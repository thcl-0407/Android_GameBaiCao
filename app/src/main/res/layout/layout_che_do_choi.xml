<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_border_che_do_choi"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_bottom"
            android:fontFamily="@font/rubik_medium"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Chế Độ Chơi"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"></TextView>

        <RadioGroup
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbtn_Nguoi_May"
                android:button="@drawable/custom_button_radio"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Người vs Máy"
                android:textColor="#fff"
                android:textSize="16sp"></RadioButton>

            <RadioButton
                android:id="@+id/rbtn_Nguoi_Nguoi"
                android:button="@drawable/custom_button_radio"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Người vs Người"
                android:textColor="#fff"
                android:textSize="16sp"></RadioButton>

            <RadioButton
                android:id="@+id/rbtn_May_May"
                android:button="@drawable/custom_button_radio"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Máy vs Máy"
                android:textColor="#fff"
                android:textSize="16sp"></RadioButton>
        </RadioGroup>

        <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnHuyThucHien_CheDoChoi"
                android:text="Huỷ"
                android:textColor="#fff"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/rubik_medium"
                android:background="@drawable/round_border_che_do_choi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"></Button>

            <Button
                android:id="@+id/btnDoiCheDoChoi"
                android:text="OK"
                android:textSize="16sp"
                android:fontFamily="@font/rubik_medium"
                android:background="@drawable/round_button_play_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"></Button>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>