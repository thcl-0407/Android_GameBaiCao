<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1C4421"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/txtTen_Player01"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingStart="10dp"
               android:layout_weight="1"
               android:textStyle="bold"
               android:text="Máy"
               android:textSize="16sp"
               android:textColor="#fff"
               android:fontFamily="@font/rubik"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></TextView>

           <TextView
               android:id="@+id/txtDiem_Player01"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingEnd="10dp"
               android:gravity="end"
               android:layout_weight="1"
               android:textStyle="bold"
               android:text=""
               android:textSize="16sp"
               android:textColor="#fff"
               android:fontFamily="@font/rubik"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></TextView>
       </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/round_image"
                android:id="@+id/card_may_01"
                android:layout_marginEnd="5dp"
                android:layout_width="100dp"
                android:layout_height="150dp"></ImageView>

            <ImageView
                android:background="@drawable/round_image"
                android:id="@+id/card_may_02"
                android:layout_marginEnd="5dp"
                android:layout_width="100dp"
                android:layout_height="150dp"></ImageView>

            <ImageView
                android:background="@drawable/round_image"
                android:id="@+id/card_may_03"
                android:layout_width="100dp"
                android:layout_height="150dp"></ImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:elevation="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_button_play_mode"
            android:text="Chế Độ Chơi"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="@font/rubik_medium"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

        <Button
            android:id="@+id/btnChiaBai"
            android:elevation="20dp"
            android:background="@drawable/circle_button"
            android:text="Chia Bài"
            android:fontFamily="@font/rubik_medium"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

        <Button
            android:elevation="20dp"
            android:background="@drawable/round_button_scorce"
            android:fontFamily="@font/rubik_medium"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:text="Bảng Điểm"
            android:textColor="#fff"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/round_image"
                android:id="@+id/card_nguoi_01"
                android:layout_marginEnd="5dp"
                android:layout_width="100dp"
                android:layout_height="150dp"></ImageView>

            <ImageView
                android:background="@drawable/round_image"
                android:id="@+id/card_nguoi_02"
                android:layout_width="100dp"
                android:layout_marginEnd="5dp"
                android:layout_height="150dp"></ImageView>

            <ImageView
                android:background="@drawable/round_image"
                android:id="@+id/card_nguoi_03"
                android:layout_width="100dp"
                android:layout_height="150dp"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTen_Player02"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Người"
                android:textSize="16sp"
                android:textColor="#fff"
                android:fontFamily="@font/rubik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/txtDiem_Player02"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:gravity="end"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text=""
                android:textSize="16sp"
                android:textColor="#fff"
                android:fontFamily="@font/rubik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>